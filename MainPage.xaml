<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeyEventsDemo.MainPage"
             Title="Keyboard Events Demo">

    <VerticalStackLayout
        Padding="30"
        Spacing="25"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <Label
            x:Name="StatusLabel"
            Text="Press keys to see events..."
            FontSize="24"
            HorizontalOptions="Center" />

        <Entry
            Placeholder="Type here to keep focus"
            WidthRequest="200"
            HeightRequest="50"
            HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentPage>